<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginControl</servlet-name>
        <servlet-class>control.LoginControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListOfCourses</servlet-name>
        <servlet-class>control.ListOfCourses</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListOfStudents</servlet-name>
        <servlet-class>control.ListOfStudents</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListOfInstructors</servlet-name>
        <servlet-class>control.ListOfInstructors</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListOfTest</servlet-name>
        <servlet-class>control.ListOfTest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListOfScores</servlet-name>
        <servlet-class>control.ListOfScores</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListOfGroups</servlet-name>
        <servlet-class>control.ListOfGroups</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginControl</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListOfCourses</servlet-name>
        <url-pattern>/courses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListOfStudents</servlet-name>
        <url-pattern>/students</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListOfInstructors</servlet-name>
        <url-pattern>/instructors</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListOfTest</servlet-name>
        <url-pattern>/tests</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListOfScores</servlet-name>
        <url-pattern>/scores</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListOfGroups</servlet-name>
        <url-pattern>/groups</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
